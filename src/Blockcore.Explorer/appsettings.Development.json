{
   "Logging": {
      "LogLevel": {
         "Default": "Debug",
         "Microsoft": "Warning",
         "Microsoft.Hosting.Lifetime": "Information"
      },
      "Console": {
         "IncludeScopes": true
      }
   },
   "Chain": {
      "Name": "City Chain",
      "Symbol": "CITY",
      "Description": "Blockchain for Smart Cities",
      "Url": "https://www.city-chain.org/",
      "Logo": "https://www.city-chain.org/images/icons/city-coin-128x128.png",
      "Icon": "https://www.city-chain.org/images/icons/city-coin-128x128.png"
   },
   "Network": {
      "APIPort": 42221,
      "APIUrl": "http://localhost"
   },
   "Explorer": {
      "Indexer": {
         "ApiUrl": "http://city.indexer.blockcore.net/api/" // Default port for locally running Blockcore Indexer.
         // "ApiUrl": "http://localhost:9910/api/" // Default port for locally running Blockcore Indexer.
      },
      "Currency": {
         "ApiUrl": "https://api.coincap.io/v2/rates",
         // Enable the auto convert to translate from USD to local currency based on the web browser culture.
         "AutoConvert": true
      },
      "Ticker": {
         "WebUrl": "https://p2pb2b.io/trade/CITY_BTC",
         "ApiUrl": "https://p2pb2b.io/api/v1/public/ticker?market=CITY_BTC",
         "PricePath": "result.last",
         "PercentagePath": "result.change",
         "IsBitcoinPrice": true
      },
      //"Ticker": {
      //   "WebUrl": "",
      //   "ApiUrl": "",
      //   // The "Path" value are used to navigate the JSON structure retrieved from the APIs.
      //   "PricePath": "",
      //   "PercentagePath": "",
      //   "IsBitcoinPrice": false
      //},
      "Setup": {
         "Title": "City Chain Explorer",
         "Footer": "https://www.city-chain.org"
      },
      "Features": {
         "Home": true,
         "Ticker": true,
         "Explorer": true,
         "API": true,
         "About": true,
         "Footer": true,
         "POSWeight": true
      }
   }
}
